<UserControl x:Class="Proyecto_Revista_Digital.Vistas.CrearArticulo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Proyecto_Revista_Digital.Vistas"
             xmlns:inputLayout="clr-namespace:Syncfusion.UI.Xaml.TextInputLayout;assembly=Syncfusion.SfTextInputLayout.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel LastChildFill="False">
        <inputLayout:SfTextInputLayout Margin="10" Hint="Titulo" HelperText="Titulo del articulo" HintFloatMode="Float" DockPanel.Dock="Top">
            <TextBox Text="{Binding Path=PersonaNueva.Nombre}"/>
            <inputLayout:SfTextInputLayout.LeadingView>
                <Image Source="/Assets/TituloArticulo.ico"/>
            </inputLayout:SfTextInputLayout.LeadingView>
        </inputLayout:SfTextInputLayout>

        <Button Width="120" Margin="10" DockPanel.Dock="Bottom" Content="Añadir imagen..." Padding="3"/>


    </DockPanel>
</UserControl>
