<Window x:Class="Proyecto_Revista_Digital.Vistas.CrearArticulo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Revista_Digital.Vistas"
        xmlns:inputLayout="clr-namespace:Syncfusion.UI.Xaml.TextInputLayout;assembly=Syncfusion.SfTextInputLayout.WPF"
        mc:Ignorable="d"
        Title="CrearArticulo" Height="450" Width="800">
    <DockPanel LastChildFill="False">
        <inputLayout:SfTextInputLayout Margin="10" Hint="Titulo" HelperText="Titulo del articulo" HintFloatMode="Float" DockPanel.Dock="Top">
            <TextBox Text="{Binding Path=PersonaNueva.Nombre}"/>
            <inputLayout:SfTextInputLayout.LeadingView>
                <Image Source="/Assets/TituloArticulo.ico"/>
            </inputLayout:SfTextInputLayout.LeadingView>
        </inputLayout:SfTextInputLayout>
        
        
    </DockPanel>
</Window>
