<Window x:Class="Proyecto_Revista_Digital.Vistas.CrearSeccion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Revista_Digital.Vistas"
        mc:Ignorable="d"
        Title="Añadir Seccion" Height="150" Width="400" ShowInTaskbar="False" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="{x:Type StackPanel}">
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Width" Value="100"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

    </Window.Resources>
    <DockPanel LastChildFill="False">
        <StackPanel DockPanel.Dock="Top">
            <TextBlock Text="Seccion"/>
            <TextBox Text="{Binding Path=NuevaSeccion.NombreSeccion,UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Right">
            <Button Content="Aceptar" Click="ButtonAceptar_Click" IsDefault="True" Command="{Binding Path=AñadirSeccionCommand}"/>
            <Button Content="Cancelar" IsCancel="True"/>
        </StackPanel>
    </DockPanel>
</Window>
